@model EmployeeModel
@using Nop.Plugin.Widgets.Employees.Models;
@using Nop.Plugin.Widgets.Employees.Resources;
@using Nop.Web.Framework
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Name)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Title)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Title)
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Email)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.DepartmentId)
                        </div>
                        <div class="col-md-9">
                            @Html.NopDropDownListFor(model => model.DepartmentId, Model.AvailableDepartments)
                            <a href="/Employees/CreateDepartment">@T(AdminResources.AddDepartmentCaption)</a>
                            @Html.ValidationMessageFor(model => model.DepartmentId)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.PictureId)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.PictureId)
                            @Html.ValidationMessageFor(model => model.PictureId)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Info)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Info, "RichEditor")
                            @Html.ValidationMessageFor(model => model.Info)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Specialties)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Specialties, "RichEditor")
                            @Html.ValidationMessageFor(model => model.Specialties)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Interests)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Interests, "RichEditor")
                            @Html.ValidationMessageFor(model => model.Interests)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.PhoneNumber)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.PhoneNumber)
                            @Html.ValidationMessageFor(model => model.PhoneNumber)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.MobileNumber)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.MobileNumber)
                            @Html.ValidationMessageFor(model => model.MobileNumber)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.WorkStarted)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.WorkStarted)
                            @Html.ValidationMessageFor(model => model.WorkStarted)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.WorkEnded)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.WorkEnded)
                            @Html.ValidationMessageFor(model => model.WorkEnded)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Published)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Published)
                            @Html.ValidationMessageFor(model => model.Published)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Deleted)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Deleted)
                            @Html.ValidationMessageFor(model => model.Deleted)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>