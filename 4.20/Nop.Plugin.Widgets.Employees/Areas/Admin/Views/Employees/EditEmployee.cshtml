@{
    Layout = "~/Plugins/Widgets.Employees/Admin/Views/_Admin.cshtml";
}
@model EmployeeModel
@using Nop.Plugin.Widgets.Employees.Models;
@using Nop.Plugin.Widgets.Employees.Resources;
@using Nop.Web.Framework
@{
    //page title
    ViewBag.Title = T(AdminResources.EditEmployeeCaption).Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "employee-form" }))
{
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T(AdminResources.EditEmployeeCaption)
            <small><i class="fa fa-arrow-circle-left"></i><a href="~/Employees/List">(@T(EmployeeActionResources.BackToList))</a></small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="category-delete" class="btn bg-blue">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    <partial name="~/Plugins/Widgets.Employees/Views/Employees/_CreateOrUpdateEmployee.cshtml" />
}

<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="category-delete" asp-action="EmployeeDelete" />
