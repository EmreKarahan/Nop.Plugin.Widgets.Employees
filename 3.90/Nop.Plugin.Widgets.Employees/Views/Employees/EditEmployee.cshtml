@{
    Layout = "~/Plugins/Widgets.Employees/Views/Shared/_Admin.cshtml";
}
@model EmployeeModel
@using Nop.Plugin.Widgets.Employees.Models;
@using Nop.Web.Framework
@{
    //page title
    ViewBag.Title = T("Admin.Employee.Edit").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "employee-form" }))
{
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Employee.Edit") 
            <small><i class="fa fa-arrow-circle-left"></i><a href="/Employees/List">(@T("Employee.BackToList"))</a></small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="category-delete" class="btn bg-blue">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("~/Plugins/Widgets.Employees/Views/Employees/_CreateOrUpdateEmployee.cshtml", Model)
}

@Html.DeleteConfirmation("category-delete")