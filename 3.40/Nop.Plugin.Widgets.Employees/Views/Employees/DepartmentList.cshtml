@{
    Layout = "~/Plugins/Widgets.Employees/Views/Shared/_Admin.cshtml";
}
@model List<Nop.Plugin.Widgets.Employees.Models.DepartmentModel>
@{
    //page title
    ViewBag.Title = T("Admin.Department.List").Text;
}
<div class="content">
                
<div class="cph">
                    
<div class="section-header">
    <div class="title">
        <img alt="" src="/Administration/Content/images/ico-content.png">
        @T("Admin.Department.List")
    </div>
    <div class="options">
        <a class="t-button" href="/Employees/CreateDepartment">@T("Admin.Department.AddNew")</a>
    </div>
</div>

<table class="adminContent">
    <tbody><tr>
               <td>
                   <div id="department-grid"></div>

                   <script>
                $(document).ready(function () {
                    $("#department-grid").kendoGrid({
                        dataSource: {
                            type: "json",
                            transport: {
                                read: {
                                    url: "@Html.Raw(Url.Action("DepartmentList", "Employees"))",
                                    type: "POST",
                                    dataType: "json"
                                }
                            },
                            schema: {
                                data: "Data",
                                total: "Total",
                                errors: "Errors"
                            },
                            error: function(e) {
                                display_kendoui_grid_error(e);
                                // Cancel the changes
                                this.cancelChanges();
                            },
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: true
                        },
                        pageable: {
                            refresh: true,
                            numeric: false,
                            previousNext: false,
                            info: false
                        },
                        editable: {
                            confirmation: false,
                            mode: "inline"
                        },
                        scrollable: false,
                        columns: [{
                            field: "Name",
                            title: "@T("Plugins.Widgets.Employees.Fields.DepartmentName")"
                        }, {
                            field: "DisplayOrder",
                            title: "@T("Plugins.Widgets.Employees.Fields.DepartmentDisplayOrder")",
                            width: 20
                        },{
                            field: "Published",
                            title: "@T("Plugins.Widgets.Employees.Fields.DepartmentPublished")",
                            width: 100,
                            headerAttributes: { style: "text-align:center" },
                            attributes: { style: "text-align:center" },
                            template: '<img src="@Url.Content("~/Administration/Content/images/")active-#=Published#.gif" />'
                        },{
                            field: "Id",
                            title: "@T("Admin.Department.Edit")",
                            width: 100,
                            template: '<a href="EditDepartment/#=Id#">@T("Admin.Common.Edit")</a>'
                        }]
                    });
                });
                   </script>
               </td>
    </tr>
</tbody></table>

</div>
</div>